                <attr name="dialogTitle" stringvalue="Python NDVI Processor Example"/>
                <!--<attr name="helpId" stringvalue="PyNDVI"/>--> <!-- The helpId if help contents is provided-->
                <attr name="targetProductNameSuffix" stringvalue="_ndvi"/>
                <attr name="ShortDescription" stringvalue="Generates NDVI from a source product with at least two spectral bands."/>
            </file>
        </folder>
    </folder>

    <folder name="Menu">
        <folder name="Optical">
            <folder name="Examples">
                <file name="PyNdviOpAction.shadow">
                    <attr name="originalFile" stringvalue="Actions/Operators/PyNdviOpAction.instance"/>
                    <attr name="position" intvalue="0"/>
                </file>
            </folder>
        </folder>
    </folder>

